#!/usr/bin/env bash
# This script adds a public key to the authorized_keys file on a remote server.

# Public key to add
NEW_PUBLIC_KEY="ssh-rsa "

# Server information
SERVER_IP="54.236.48.11"
SSH_KEY="~/.ssh/school"

# Add the public key to authorized_keys
ssh -i "$SSH_KEY" ubuntu@"$SERVER_IP" "echo '$NEW_PUBLIC_KEY' >> ~/.ssh/authorized_keys"

echo "Public key added to authorized_keys on the remote server."
